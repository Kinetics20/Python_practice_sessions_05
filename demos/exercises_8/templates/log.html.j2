{% extends "main.html.j2" %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">System Log</h2>
            {% if log_entries %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Timestamp</th>
                                <th>Log Entry</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for timestamp, entry in log_entries %}
                            <tr>
                                <td class="text-muted">{{ timestamp }}</td>
                                <td><code>{{ entry }}</code></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">No log entries found</h4>
                    <p class="mb-0">There are currently no log entries to display.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
